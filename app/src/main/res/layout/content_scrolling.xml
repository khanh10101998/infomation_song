<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/content_scrolling"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#c6ff7676"
    android:gravity="center_horizontal"

    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="hongkhanh.scrolling.ScrollingActivity"
    tools:showIn="@layout/activity_information_song">
    <TextView
        android:paddingLeft="@dimen/margin_left_textView_lyrics_content_scrolling"
        android:layout_marginTop="@dimen/margin_top_content"
        android:background="#FFF0F0F0"
        android:textStyle="bold"
        android:text="lyrics:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/line_lyrics"
        android:layout_width="match_parent"
        android:layout_height="100dp">
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/tv_lyrics"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="#f0f0f0"
            android:scrollHorizontally="false"

            android:textAlignment="center" />
    </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
    <LinearLayout
        android:nestedScrollingEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_content"
        android:background="#ffffff"
        android:orientation="vertical">
<RelativeLayout
    android:padding="10dp"
    android:layout_marginLeft="@dimen/margin_left_textView_content_scrolling"
    android:layout_marginRight="@dimen/margin_left_textView_content_scrolling"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Vdeos"
        android:textSize="@dimen/textSize_textView_content_scrolling" />
    <com.facebook.share.widget.ShareButton
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/fb_share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>



        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/youtube"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_YouTubePlayerView_content_scrolling"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_top_YouTubePlayerView_content_scrolling">
        </com.google.android.youtube.player.YouTubePlayerView>
    </LinearLayout>
</LinearLayout>
